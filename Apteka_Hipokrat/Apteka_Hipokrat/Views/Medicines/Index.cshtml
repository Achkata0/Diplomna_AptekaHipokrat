@model IEnumerable<Apteka_Hipokrat.Models.Medicine>

@{
    ViewData["Title"] = "Index";
}
<h1 style="color:white;">Медикаменти</h1>  

<div class="col-6">
    <a asp-controller="Medicines" asp-action="Create" class="btn btn-primary"> Create New Medicines</a>        
</div> 
<br>
<div class="container">
    <div class="row justify-content-md-around">

         @foreach (var item in Model) {    
            <div class="card" style="width:30%; height:25%; border-radius:20px; opacity:0.9; "> 
               @*<div class="row">*@ 
                  <div class="card-body">
                    <h5 class="card-title">                         
                        @Html.DisplayFor(modelItem => item.Name)
                    </h5>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.MedicineTypes.Name)
                    </p>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.Producers.Name)
                    </p>
                    <p class="card-text">
                        @Html.DisplayFor(modelItem => item.RegisterON)
                    </p>
                    <p class="card-subtitle">
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                    <div class="card-imag"> 
                        <img src="@Html.DisplayFor(modelItem => item.ImageURL)" width="100" /> 
                    </div>

                    <a asp-controller="Medicines" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                    <a asp-controller="Medicines" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-controller="Medicines" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a> |
                    <a asp-controller="Shoppings" asp-action="Create" asp-route-medicineId="@item.Id" class="btn btn-primary">Cart</a> 

                </div>
               @*</div>*@
            </div>
         }
    </div>
</div>      